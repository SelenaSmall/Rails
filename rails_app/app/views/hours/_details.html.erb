<div class="bordered-box">
<h2>Hours</h2>

<table class="table">
  <thead>
    <tr>
      <th>Day</th>
      <th>Opening Time</th>
      <th>Closing Time</th>
      <th>Interval</th>
      <th>Covers per Interval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venue.hours.each do |hour| %>
      <tr>
        <div id="opening-hours"></div>
          <td><%= hour.day %></td>
          <td><%= hour.open_time %></td>
          <td><%= hour.close_time %></td>
          <td><%= hour.interval %></td>
          <td><%= hour.covers_per_interval %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_organisation_venue_hour_path(@organisation, @venue, @hour), 
      remote: true, id: "new-item-link", class: "btn btn-sm btn-default round" do %> New Hour
<%end%>

</div>
