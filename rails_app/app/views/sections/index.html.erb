<p id="notice"><%= notice %></p>

<h1> sectionS </h1>

<table class="table">
  <thead>
    <tr>
      <th>Section</th>
      <th>First tab</th>
      <th>Last tab</th>
      <th>Bookable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section %></td>
        <td><%= section.first_num %></td>
        <td><%= section.last_num %></td>
        <td><%= section.bookable %></td>
        <td><%= link_to 'Details', [@organisation, @venue, @section] %></td>
        <td><%= link_to 'Edit', edit_organisation_venue_section_path(@organisation, @venue, section) %></td>
        <td><%= link_to 'Delete', [@organisation, @venue, @section], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New section', new_organisation_venue_section_path %> |
<%= link_to 'Back to Venues', organisation_venues_path %>

