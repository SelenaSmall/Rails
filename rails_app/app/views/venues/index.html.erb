<p id="notice"><%= notice %></p>

<h1>VENUES</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.phone %></td>
        <td><%= venue.email %></td>
        <td><%= venue.address %></td>
        <td><%= link_to 'Details', [@organisation, venue] %></td>
        <td><%= link_to 'View Bookings', organisation_venue_bookings_path(@organisation, venue) %></td>
        <td><%= link_to 'View Hours', organisation_venue_hours_path(@organisation, venue) %></td>
        <td><%= link_to 'Delete', [@organisation, venue], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

