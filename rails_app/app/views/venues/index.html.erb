<p id="notice"><%= notice %></p>

<h1>VENUES</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.phone %></td>
        <td><%= venue.email %></td>
        <td><%= venue.address %></td>
        <td><%= link_to 'Show', [@user, venue] %></td>
        <td><%= link_to 'Edit', edit_user_venue_path(@user, venue) %></td>
        <td><%= link_to 'Destroy', [@user, venue], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Bookings', user_venue_bookings_path(1, 1) %></td>
        <td><%= link_to 'View Customers', user_venue_customers_path(1, 1) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New venue', new_user_venue_path %>
