<%= render "venues/nav", venue: @venue %>

<body>
<div class="main-container">
<!-- Venue Details Views -->
<div class="row">
<div class="col-md-4"></div>
<div class="col-md-4">
<h1><center><strong><%= @venue.name %></center></strong></h1>

<div><center>
  <strong>PH </strong><%= @venue.phone %> | 

  <strong>EMAIL </strong><%= @venue.email %> |

  <strong>ADDRESS </strong><%= @venue.address %>
</center></div>

<br>
<center><%= link_to 'All venues', organisation_venues_path %> | 
  <%= link_to edit_organisation_venue_path(@venue.organisation, @venue), 
remote: true, id: "new-item-link", class: "btn btn-sm btn-default round" do %> 
