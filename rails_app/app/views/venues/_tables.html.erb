<div class="bordered-box">

<table class="table">
  <thead>
    <tr>
      <th>Tab</th>
      <th>Section</th>
      <th>Min Covers</th>
      <th>Max Covers</th>
      <th>Booking</th>
     </tr>
  </thead>
  <tbody>
    <% @venue.tables.each do |table| %>
      <tr>
        <div id="tables"></div>
          <td><%= table.tab %></td>
          <td><%= table.section %></td>
          <td><%= table.min_covers %></td>
          <td><%= table.max_covers %></td>
          <td><%= table.booking_order %></td>
          <td><%= link_to edit_organisation_venue_table_path(@organisation, @venue, table), 
              remote: true, id: "new-item-link", class: "btn btn-sm btn-default round" do %> 
              <i class="glyphicon glyphicon-pencil"></i>Edit
              <%end%>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Details', venue_tables_path(@venue) %>

</div>