<p id="notice"><%= notice %></p>

<h1>Bookings for <%= User.name %> <%= GetDate.generate %></h1>

<table>
  <thead>
    <tr>
      <th>Tab</th>
      <th>Time</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.tab_name %></td>
        <td><%= booking.start_time %></td>
        <td><%= booking.name %></td>
        <td><%= booking.phone %></td>
        <td><%= booking.email %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
<%= link_to 'Back to Users', users_path %>
