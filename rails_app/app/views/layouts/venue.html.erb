<!DOCTYPE html>
<html>
<head>
  <title>Reservations</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">MENU <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to @venue.name, [@organisation, @venue] %></li>
            <li><%= link_to 'Customers', organisation_venue_customers_path(@organisation, @venue) %></li>
            <li><%= link_to 'Users', organisation_venue_users_path(@venue.organisation, @venue) %></li>
            <li><%= link_to 'Reports', organisation_venue_reports_path(@venue.organisation, @venue) %></li>
            <li role="separator" class="divider"></li>
          </ul>
        </li>
      </ul>

      <class="btn-group" role="group" aria-label="...">
      <%= link_to edit_all_organisation_venue_notes_path(@organisation, @venue, @covers), 
                remote: true, id: "new-item-link", class: "btn btn-default navbar-btn" do %> Notes
                <%end%>
      <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Run Sheet', organisation_venue_bookings_path(@organisation, @venue) %></button>
      <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Grid View', organisation_venue_grids_path(@organisation, @venue) %></button>
      <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Floor Plan', organisation_venue_plans_path(@organisation, @venue) %></button>
      <button type="button" class="btn btn-default dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Date Selector<span class="caret"></span></a>
            <ul class="dropdown-menu">
                    <% @venue.hours.each do |hour| %>
                    <div><%= link_to hour.day, [@organisation, @venue, hour] %></div>
                    <% end %> 
            </ul>
      </button>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">USERS <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">List </a></li>
              <li><a href="#">of </a></li>
              <li><a href="#">Users</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Create New User</a></li>
            </ul>
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4"></div>
  <div class="col-md-4"></div>
</div>
<%= yield %>
</div>

</body>
</html>
